{
  "include": ["src/**/*", "lambda/**/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "codegen/*": ["codegen/*"],
      "components": ["src/components"],
      "helper": ["src/helper"]
    },
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
