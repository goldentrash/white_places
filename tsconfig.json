{
  "include": ["src/**/*", "functions/**/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "types": [],
    "baseUrl": ".",
    "paths": {
      "codegen/*": ["codegen/*"],
      "components/*": ["src/components/*"],
      "page/*": ["src/page/*"]
    },
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
