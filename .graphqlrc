schema: 'functions/schema/**/!(index).ts'
documents: 'src/document/**/*.graphql'

extensions:
  codegen:
    overwrite: true

    generates:
      # for resolvers
      codegen/resolver-types.ts:
        config:
          useIndexSignature: true
        plugins:
          - typescript
          - typescript-resolvers

      # for react hooks
      codegen/document-types.ts:
        plugins:
          - typescript
          - typescript-operations
          - typescript-react-apollo
