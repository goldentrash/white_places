projects:
  functions:
    schema: 'src/functions/typeDefs.ts'
    extensions:
      codegen:
        generates:
          src/functions/codegen/generated/types.ts:
            config:
              useIndexSignature: true
            plugins:
              - typescript
              - typescript-resolvers
  db:
    schema: 'src/functions/db.graphql'
    extensions:
      codegen:
        generates:
          src/functions/codegen/generated/db.ts:
            plugins:
              - typescript
